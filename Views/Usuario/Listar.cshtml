@using Estacionamento1.Models;
@{
Layout = "MasterPage";
ViewBag.Title = "Lista de Usu√°rios";
}
<div class="container">
    <br>
    <h2>@TempData["mensagem"]</h2>

    <table class="table table-striped">
        <thead class="table table-hover table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Data de Nascimento</th>
            </tr>
            
        <tbody>
        </thead>
            @foreach(var item in ViewData["usuarios"] as List<UsuarioModel>)
                {
                <tr>
                    
                    <td>@item.NomeDoCondutor   </td>
                    <td>@item.ModeloDoCarro </td>
                    <td>@item.MarcaDoCarro</td>
                    <td>@item.PlacaDoCarro</td>
                    <td>@item.DataEntrada.ToShortDateString()  
                        <td>                     
                        <a href="/Usuario/Editar?id=@item."class="btn btn-warning">Editar</a>                        
                        <a href="#"class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
                }


        </tbody>
    </table>
</div>